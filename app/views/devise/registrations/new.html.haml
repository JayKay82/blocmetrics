%h2 Sign Up
.row
  .col-md-8
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .form-group
        = f.label :name
        = f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Please enter your name...'
      .form-group
        = f.label :email
        = f.email_field :email, class: 'form-control', placeholder: 'Please enter your email address...'
      .form-group
        = f.label :password
        = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Please enter a password...'
      .form-group
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Please enter a password confirmation...'
      .form-group
        = f.submit "Sign up", class: 'btn btn-success'
      .form-group
        = render "devise/shared/links"
